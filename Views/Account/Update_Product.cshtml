@{
    ViewBag.Title = "Signin";
    Layout = null;
}
@model Final_Project.Models.Admin
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Bootbusiness | Short description about company">
    <meta name="author" content="Your name">
      <script type="text/javascript" src="~/Scripts/jquery-1.7.1.js"></script>
      <script type="text/javascript">
          $(document).ready(function () {
              $("#update").hide();
              $("#cat").change(function () {
                  var cat = $("#cat").val();
                  $.getJSON("/Account/get_products?category=" + cat, function (data) {
                      $("#pro").empty();
                      $("#pro").append("<option>--Select--</option>");
                      $.each(data, function (i, val) {
                          $("#pro").append("<option>" + val.title + "</option>");
                      });
                  });
              });
              $("#pro").change(function () {
                  var product = $("#pro").val();
                  $.getJSON("/Account/getItem?id=" + product, function (data) {
                      $("#title").val(data.title);
                      $("#price").val(data.price);
                      $("#desc").val(data.description);
                      $("#c").val(data.Category);
                      $("#update").show();
                  });
              });
          });
      </script>
    <title></title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
      <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <!-- Bootstrap responsive -->
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">
    <!-- Font awesome - iconic font with IE7 support --> 
    <link href="~/Content/font-awesome.css" rel="stylesheet">
    <link href="~/Content/font-awesome-ie7.css" rel="stylesheet">
    <!-- Bootbusiness theme -->
    <link href="~/Content/boot-business.css" rel="stylesheet"> 
      <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
     

  </head>
  <body>
    <!-- Start: HEADER -->
      <div class="bs-example">
	<ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#">Home</a></li>
	</ul>
</div>

    <!-- End: HEADER -->
    <!-- Start: MAIN CONTENT -->
    <div class="content">
      <div class="container">
        <div class="page-header">
          <h1>Welcome Admin</h1>
        </div>
         Category: <select id="cat" style="width:500px;height:30px">
             <option>--Select Category--</option>
             <option>Mobile</option>
                                        <option>Desktop</option>
                                        <option>Laptop</option>
                                        <option>Notebook</option>
                                        <option>Component</option>
                                        <option>Software</option>
                                        <option>PDA</option>
                                        <option>Camera</option>
                                        <option>MP3</option>
          </select><br /><br />
          Products:<select id="pro" style="width:500px;height:30px">
              <option>--Select Category--</option>
          </select>
          <form action="/Account/Update" method="post">
        <div class="row" id="update">
          <div class="span6 offset3">
            <h4 class="widget-header"><i class="icon-gift"></i>Update Product</h4>
            <div class="widget-body">
              <div class="center-align">
                    <div id="valid"></div>
                    <div class="form-horizontal form-signin-signup">
                        <input type="text" name="update_title" id="title" />
                        <input type="text" name="update_price" id="price" />
                        <input type="text" name="update_desc" id="desc" />
                        <input type="text" id="c" name="update_category" />
                          <br /><br />
                         <input type="file" name="update_image" id="image" style="margin-left:260px" />
                 
                        <br />
                        <br />
                        <div>
                        <input type="submit" value="Update Product" id="updateit" class="btn btn-primary btn-large">
                        </div>
                         </div>
              </div>
            </div>
          </div>
           
        </div>
              </form>
      </div>
    </div>
    <!-- End: MAIN CONTENT -->
    <!-- Start: FOOTER -->
    <footer>
      <p>copy rights to shehzad</p>
    </footer>
    <!-- End: FOOTER -->
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/boot-business.js"></script>
  </body>
</html>
