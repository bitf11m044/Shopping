        $(document).ready(function () {
            $(document).ready(function () {
                $("#signin").click(function () {
                    var email = $("#email").val();
                    var password = $("#pass").val();
                    if (email == "" && password == "") {
                        alert("Both fields are empty");
                    }
                    else if (email == "") {
                        alert("Enter the email please");
                    }
                    else if (password == "") {
                        alert("Enter the password");
                    }
                    else {
                        $.getJSON("/Home/Check?mail=" + email + "&pass=" + password, function (data) {
                            if (data == false) {
                                alert("Your name not exist please signup");
                            }
                            else
                            {
                                var url = '/Home/Mobile';
                                window.location.href = url;
                            }
                        });
                    }
                });
            });
            $("#search").keyup(function () {
                var bit = $("#search").val();
               
                $.getJSON("/Account/get_list?id=" + bit, function (data) {
                    var list = [];
                    $.each(data, function (i, val) {
                        list[i]=val;
                    });
                    $('#search').autocomplete({source:list});
                });
            });
            $("#search_button").click(function () {
                var ser = $("#search").val();
                if (ser == "") {
                    alert("Please enter in the search box");
                }
                else {
                    $.getJSON("/Account/getSearchData?id=" + ser, function (data) {
                        if (data == false) {
                            alert("Data not found");
                        }
                            else {
                                var url = '/Account/show?title=' + data.title + '&cat=' + data.Category + '&price=' + data.price+'&link='+data.link;
                                window.location.href = url;
                            }
                        });
                }
                    
            });
        });
